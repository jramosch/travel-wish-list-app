<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%=@city.name%></title>
  </head>
  <body>
    <h2>City: <%=@city.name%></h2>
    <p>Submitted by: <a href="/users/<%=@city.user.slug%>"><%=@city.user.username%></a></p>
    <h3>Attractions:</h3>
    <% @city.attractions.each do |attraction| %>
      <a href="/attractions/<%=attraction.slug%>"><%=attraction.name%></a><br>
    <% end %>
  </body>
</html>
